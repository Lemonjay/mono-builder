{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["packages/cesium-core/Source"],
    "exclude": ["node_modules"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "templates": {
    "cleverLinks": true,
    "default": {
      "outputSourceFiles": false
    }
  },
  "plugins": ["./Tools/jsdoc/jsdoc-intersection.js"],
  "opts": {
    "destination": "packages/cesium-core",
    "template": "tsd-jsdoc/dist",
    "outFile": "index.d.ts",
    "recurse": true
  }
}
